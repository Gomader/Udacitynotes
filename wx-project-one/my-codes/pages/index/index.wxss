.category-column {
  display: flex;
  height: 60rpx;
  width: 100%;
  background-color: rgb(44,146,218);
  position: relative;
  padding-top: 0rpx;
}
.category-choosed {
  /*被选中的按钮设置*/
  display:flex;
  align-items: center;
  /*以下是字体设置*/
  font-size: 25rpx;
  font-weight: bold;
  text-decoration:underline;
  flex-direction: column;
  justify-content: center;
  color: rgb(250, 250, 250)
}

.category-unchoosed{
  display:flex;
  font-size: 23rpx;
  align-items: center;
  background-color: rgb(44,146,218);
  flex-direction: column;
  justify-content: center;
  color: rgba(250, 250, 250, 0.5)
}
.category-unchoosed::after{
  border: none;
}
.first-news{
  top: 0rpx;
  height: 450rpx;
  width: 100%;
  display: flex;
  position: relative;
  padding-top: 0rpx;
  padding-bottom: 0rpx;
}
.firstnews-bg{
  top: 0rpx;
  height: 450rpx;
  width: 100%;
  opacity: 0.05;
}
.firstnews-text{
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: bold;
  color: rgb(250, 250, 250);
  display: flex;
  position: absolute;
  top: 270rpx;
  justify-content: center;
  align-items: center;
  margin-left: 60rpx;
  margin-right: 80rpx;
}
.firstnews-pc{
  position: absolute;
  top: 35rpx;
  left: 35rpx;
  width: 680rpx;
  height: 380rpx;
  z-index: 0;
  border-radius: 10rpx;
}
.firstnews-publisher{
  font-size: 25rpx;
  line-height: 35rpx;
  color: rgba(250, 250, 250,0.8);
  display: flex;
  position: absolute;
  top: 370rpx;
  justify-content: center;
  align-items: center;
  margin-left: 60rpx;
  margin-right: 80rpx;  
}
.hot-icon{
  width: 70rpx;
  height: 70rpx;
  z-index: 1;
  display: flex;
  position: absolute;
  top: 0rpx;
  left: 670rpx;
}
.new-list{
  display:flex;
  position: relative;
  padding-top: 0rpx;
}
.news-item{
  height: 275rpx;
  position: relative;
  padding-top: 0rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.news-text{
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: bold;
  color: rgb(0, 0, 0);
  display: flex;
  position: absolute;
  top: 25rpx;
  justify-content: center;
  align-items: center;
  margin-left: 35rpx;
  margin-right: 260rpx;
}
.news-item:last-child {
  border-bottom: none;
}
.news-pc{
  position: absolute;
  top: 25rpx;
  left: 20rpx;
  width: 230rpx;
  height: 200rpx;
  z-index: 0;
  margin-left: 490rpx;
  border-radius: 10rpx;
}
.news-publisher{
  font-size: 25rpx;
  line-height: 35rpx;
  color: rgba(0, 0, 0,0.5);
  display: flex;
  position: absolute;
  top: 190rpx;
  justify-content: center;
  align-items: center;
  margin-left: 35rpx; 
}